<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ui.GamePage"
    Title="Game">
    <StackLayout Padding="20" Spacing="15">
        <!-- Здесь вы можете разместить любые элементы для отображения игры -->
        <Label Text="Игра загружается…" 
           FontSize="24" 
           HorizontalOptions="Center" />
        <!-- Например, контейнер для вывода консоли игры -->
        <ScrollView>
            <Label x:Name="ConsoleOutput"
             FontFamily="Courier New"
             LineBreakMode="NoWrap" />
        </ScrollView>
    </StackLayout>
</ContentPage>
