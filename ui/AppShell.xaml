<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ui"
    Shell.FlyoutBehavior="Disabled"
    Title="ui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Game"
        ContentTemplate="{DataTemplate local:GamePage}"
        Route="GamePage" />
    <ShellContent
        Title="CharacterCreation"
        ContentTemplate="{DataTemplate local:CharacterCreationPage}"
        Route="CharacterCreationPage" />
    <ShellContent
        Title="LoadGame"
        ContentTemplate="{DataTemplate local:LoadGamePage}"
        Route="LoadGamePage" />
    <ShellContent
        Title="Story"
        ContentTemplate="{DataTemplate local:StoryPage}"
        Route="StoryPage" />
    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate local:ShopPage}"
        Route="ShopPage" />
    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate local:InventoryPage}"
        Route="Inventory" />

</Shell>
